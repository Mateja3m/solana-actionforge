{
  "name": "@idoa/actionforge-harness",
  "version": "0.1.2",
  "description": "Conformance harness and fixture runner for Solana Actions/Blinks endpoints",
  "license": "MIT",
  "author": "Milan Matejic",
  "keywords": [
    "solana",
    "actions",
    "blinks",
    "harness",
    "testing",
    "web3",
    "solana-actions",
    "conformance"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Mateja3m/solana-actionforge"
  },
  "homepage": "https://github.com/Mateja3m/solana-actionforge/tree/main/packages/harness",
  "bugs": {
    "url": "https://github.com/Mateja3m/solana-actionforge/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "fixtures",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "bin": {
    "actionforge-harness": "dist/bin/actionforge-harness.js"
  },
  "scripts": {
    "build": "tsup src/index.ts bin/actionforge-harness.ts --format cjs --dts --out-dir dist",
    "test": "vitest run packages/harness/src"
